<div class="page-header">
  <h1><%= @family.name %></h1>
</div>

<div class="row">
  <div class="col-xs-2">
    <img src="<%= @family.picture_url %>" />
  </div>
  <div class="col-xs-10">
    <% if @family.children.any? %>
      <h2>Children</h2>
      <ul>
        <% @family.children.each do |child| %>
          <li><%= child.first_name %> <%= child.last_name %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
